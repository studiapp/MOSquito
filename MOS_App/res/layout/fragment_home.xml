<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Home View"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_nav_home" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HFU Reader"
        android:id="@+id/rssreader"
        android:onClick="onClick"
        android:layout_above="@+id/txtLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonFelix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rssreader"
        android:layout_alignLeft="@+id/rssreader"
        android:layout_alignRight="@+id/rssreader"
        android:text="Felix"
        android:onClick="onClick" />

    <Button
        android:id="@+id/buttonBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFelix"
        android:layout_alignLeft="@+id/buttonFelix"
        android:layout_alignRight="@+id/buttonFelix"
        android:onClick="onClick"
        android:text="Budget" />

    <Button
        android:id="@+id/buttonMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonBudget"
        android:layout_alignLeft="@+id/buttonBudget"
        android:layout_alignRight="@+id/buttonBudget"
        android:onClick="onClick"
        android:text="HFUMap" />

</RelativeLayout>