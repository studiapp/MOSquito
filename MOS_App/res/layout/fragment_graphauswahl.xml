    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.graphs.MainActivity" >

    <Button
        android:id="@+id/cn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="onClick"
        android:text="IT-Consoulting" />

    <Button
        android:id="@+id/ai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cn"
        android:layout_below="@+id/cn"
        android:text="Anweder Support" />

    <Button
        android:id="@+id/spb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ai"
        android:layout_alignRight="@+id/ai"
        android:layout_below="@+id/ai"
        android:text="Netzwerk" />

    <Button
        android:id="@+id/verglbachelor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spb"
        android:layout_alignRight="@+id/spb"
        android:layout_below="@+id/spb"
        android:text="Vertrieb-Außendienst" />
